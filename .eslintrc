---
ecmaFeatures:
  jsx: true
env:
  browser: true
  es6: true
  jasmine: true
  node: true
globals:
  jest: true
plugins:
  - react
rules:
  comma-dangle: 0
  curly: [2, multi-line]
  no-multi-str: 0
  no-undef: 1
  strict: 0

  ## Style Rules
  array-bracket-spacing: [2, never]
  eol-last: 2
  indent: [2, 2]
  max-len: [2, 80]
  new-cap: 0
  no-underscore-dangle: 0
  object-curly-spacing: [2, always]
  quotes: 0
  space-after-keywords: 2
  space-before-function-parentheses: [2, never]

  ## eslint-plugin-react
  react/jsx-uses-react: 1
  react/jsx-uses-vars: 1
  react/react-in-jsx-scope: 1
